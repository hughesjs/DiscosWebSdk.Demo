@namespace DiscosWebSdk.Demo.Blazor.Shared.Components.Common.Buttons

<MudButton OnClick="OnClickLoadingWrapper" Variant="Variant" Color="Color">
    @if (_loading)
    {
        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
        <MudText Class="ms-2">@LoadingText</MudText>
    }
    else
    {
        <MudText>@MainText</MudText>
    }
</MudButton>
